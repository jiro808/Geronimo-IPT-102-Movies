<!DOCTYPE html>
<html>
<head>
    <title>Movie Table</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin-top: 20px;
        }
        .container {
            max-width: 1200px;
        }
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .custom-image {
            height: 200px;
            object-fit: cover;
        }
        .card-title a {
            text-decoration: none;
            color: #333;
        }
        .card-title a:hover {
            text-decoration: underline;
        }
        .row {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        @for (var i = 0; i < Model.Count; i += 5)
        {
            <div class="row">
                @for (var j = i; j < Math.Min(i + 5, Model.Count); j++)
                {
                    <div class="col-md-2 mb-4">
                        <div class="card">
                            <img src="@Model[j].ImageUrl" alt="@Model[j].Name" class="card-img-top custom-image">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/movies/getmovie/@Model[j].Id">@Model[j].Name</a>
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
